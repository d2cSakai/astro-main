<style lang="scss">
  @charset 'UTF-8';
  @use "sass:math";
  @use "../assets/scss/inc" as *;

  /*
  Hamburger
*/
  // $position: right;
  $line-color: $primary-text-color;
  $active-line-color: $primary-text-color;

  // setting
  $right: 2.5%;
  $left: auto;

  .hamburger {
    position: fixed;
    z-index: 100;
    top: 20px;
    right: 5%;
    width: 40px;
    height: 40px;
    margin: auto 0;
    background-color: transparent;
    cursor: pointer;
    border: 0;
    outline: 0;

    &:focus {
      box-shadow: 0 0 0 1px #212121;
    }

    &__line {
      display: block;
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      width: 75%;
      height: 2px;
      margin: auto;
      transition: transform 0.2s ease-in-out;
      background-color: $line-color;

      &::before,
      &::after {
        content: "";
        display: block;
        position: absolute;
        width: 100%;
        height: 100%;
        transition: inherit;
        border-radius: inherit;
        background-color: inherit;
        transition-property: transform;
      }

      &::before {
        top: -6px;
      }

      &::after {
        top: 6px;
      }
    }

    @include mq(md) {
      display: none;
    }

    &[aria-expanded="true"] {
      .hamburger__line {
        background-color: transparent;

        &:before,
        &:after {
          top: 0;
          background-color: $active-line-color;
        }

        &:before {
          transform: rotate(-45deg);
        }
        &:after {
          transform: rotate(45deg);
        }
      }
    }
  }
</style>

