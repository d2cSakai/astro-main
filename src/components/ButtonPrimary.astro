---
// scss
import "../assets/scss/common.scss";

interface Props {
  href: string;
  accent: string;
}

const { href = "/", accent = "false", ...props } = Astro.props;
---

<a href={href} class:list={["buttonPrimary", { "-accent": accent }]} {...props}>
  <slot />
</a>

<style lang="scss">
  $color-red: rgb(200, 6, 6);
  .buttonPrimary {
    display: inline-block;
    padding: 1em 2em;
    text-decoration: none;
    background-color: #555;
    border-radius: 2.5rem;
    color: #fff;
    font-weight: 700;

    &.-accent {
      background-color: $color-red;
    }
  }
</style>
